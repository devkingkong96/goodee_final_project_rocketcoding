<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">

            <PatternLayout
                    pattern="%d{yyyy/MM/dd HH:mm:ss.SSS} %-5level --- [%thread] %logger[%method:%line] - %msg  - ResultSet: %msg %rowCount row(s)%n"/>
        </Console>
    </Appenders>
    <Loggers>

        <Root level="debug" additivity="true">
            <AppenderRef ref="Console"/>
        </Root>

    </Loggers>
</Configuration>